/* API */

/**
 * Table form action callback for removing multiple media.
 *
 * @param array $media
 * @return void
 */
function mediabox_library_action_remove_selected($media = array()) {
  // No files were selected
  if (sizeof($media) == 0) {
    return;
  }

  // Create URL param
  $ids = implode('+', $media);
  drupal_goto('admin/library/remove/' . $ids);
}

